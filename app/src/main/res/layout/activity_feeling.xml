<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/activity_feeling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4285F4"
            tools:context=".userpost.FeelingActivity">

            <include layout="@layout/include_toolbar"
                android:background="@color/transparent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/happy_Category"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Happy"
                    android:textColor="#fff"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="80dp"
                    android:id="@+id/happy_emotion"
                    android:textSize="23sp"
                    android:paddingRight="10dp"/>

                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/happy_switch"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="75dp"
                    app:base_release_color="@color/md_green_50"
                    app:base_press_color="@color/md_green_900"
                    app:ball_release_color="@color/md_green_500"
                    app:ball_press_color="@color/md_white_1000"
                    app:icon_release="@drawable/emoji_before"
                    app:icon_press="@drawable/emoji_after"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relaxed_category"
                android:layout_below="@+id/happy_Category"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Relaxed"
                    android:id="@+id/relaxed_emotion"
                    android:textColor="#fff"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="23sp" />

                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/relaxed_switch"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    app:base_release_color="@color/md_teal_50"
                    app:base_press_color="@color/md_teal_900"
                    app:ball_release_color="@color/md_teal_500"
                    app:ball_press_color="@color/md_white_1000"
                    app:icon_release="@drawable/emoji_before"
                    app:icon_press="@drawable/relax_after"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category_angry"
                android:layout_below="@+id/relaxed_category"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Angry"
                    android:id="@+id/angry_emotion"
                    android:textColor="#fff"
                    android:layout_below="@+id/relaxed_emotion"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="23sp" />


                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/angry_switch"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="25dp"
                    app:base_release_color="@color/md_deep_purple_50"
                    app:base_press_color="@color/md_deep_purple_900"
                    app:ball_release_color="@color/md_deep_purple_500"
                    app:ball_press_color="@color/md_white_1000"
                    app:icon_release="@drawable/emoji_before"
                    app:icon_press="@drawable/angry_after"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/sad_category"
                android:layout_below="@+id/category_angry">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Sad"
                    android:id="@+id/sad_emotion"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="23sp" />


                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/sad_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="22dp"
                    app:base_release_color="@color/md_deep_orange_50"
                    app:base_press_color="@color/md_deep_orange_900"
                    app:ball_release_color="@color/md_deep_orange_500"
                    app:ball_press_color="@color/md_white_1000"
                    app:icon_release="@drawable/emoji_before"
                    app:icon_press="@drawable/sad_after"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/bored_category"
                android:layout_below="@+id/sad_category">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Bored"
                    android:id="@+id/bored_emotion"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="23sp" />


                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/bored_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="22dp"
                    app:base_release_color="@color/md_deep_orange_50"
                    app:base_press_color="@color/md_deep_orange_900"
                    app:ball_release_color="@color/md_deep_orange_500"
                    app:ball_press_color="@color/md_white_1000"
                    app:icon_release="@drawable/emoji_before"
                    app:icon_press="@drawable/bored_after"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/loved_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bored_category"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loved_emotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="Loved"
                    android:textColor="#fff"
                    android:textSize="23sp" />


                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/loved_switch"
                    app:ball_press_color="@color/md_white_1000"
                    app:ball_release_color="@color/md_deep_orange_500"
                    app:base_press_color="@color/md_deep_orange_900"
                    app:base_release_color="@color/md_deep_orange_50"
                    app:icon_press="@drawable/loved"
                    app:icon_release="@drawable/emoji_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="22dp"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sleepy_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loved_category"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sleepy_emotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="Sleepy"
                    android:textColor="#fff"
                    android:textSize="23sp" />


                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/sleepy_switch"
                    app:ball_press_color="@color/md_white_1000"
                    app:ball_release_color="@color/md_deep_orange_500"
                    app:base_press_color="@color/md_deep_orange_900"
                    app:base_release_color="@color/md_deep_orange_50"
                    app:icon_press="@drawable/sleepy"
                    app:icon_release="@drawable/emoji_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="22dp"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/flirty_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sleepy_category"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flirty_emotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="Flirty"
                    android:textColor="#fff"
                    android:textSize="23sp" />


                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/flirty_switch"
                    app:ball_press_color="@color/md_white_1000"
                    app:ball_release_color="@color/md_deep_orange_500"
                    app:base_press_color="@color/md_deep_orange_900"
                    app:base_release_color="@color/md_deep_orange_50"
                    app:icon_press="@drawable/flirty"
                    app:icon_release="@drawable/emoji_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="22dp"
                    android:layout_weight="1" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/sick_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flirty_category"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sick_emotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="sick"
                    android:textColor="#fff"
                    android:textSize="23sp" />


                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/sick_switch"
                    app:ball_press_color="@color/md_white_1000"
                    app:ball_release_color="@color/md_deep_orange_500"
                    app:base_press_color="@color/md_deep_orange_900"
                    app:base_release_color="@color/md_deep_orange_50"
                    app:icon_press="@drawable/sick"
                    app:icon_release="@drawable/emoji_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="22dp"

                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tired_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sick_category"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tired_emotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="tired"
                    android:textColor="#fff"
                    android:textSize="23sp" />


                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/tired_switch"
                    app:ball_press_color="@color/md_white_1000"
                    app:ball_release_color="@color/md_deep_orange_500"
                    app:base_press_color="@color/md_deep_orange_900"
                    app:base_release_color="@color/md_deep_orange_50"
                    app:icon_press="@drawable/tired"
                    app:icon_release="@drawable/emoji_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="22dp"

                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sexy_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tired_category"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sexy_emotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="sexy"
                    android:textColor="#fff"
                    android:textSize="23sp" />


                <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                    android:id="@+id/sexy_switch"
                    app:ball_press_color="@color/md_white_1000"
                    app:ball_release_color="@color/md_deep_orange_500"
                    app:base_press_color="@color/md_deep_orange_900"
                    app:base_release_color="@color/md_deep_orange_50"
                    app:icon_press="@drawable/sexy"
                    app:icon_release="@drawable/emoji_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="22dp"

                    android:layout_weight="1" />

            </LinearLayout>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_feeling"
                android:layout_marginBottom="50dp"
                android:layout_below="@+id/sexy_category"
                android:text="Done"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>




    </ScrollView>

    <include layout="@layout/include_main_nav_drawer" />

</android.support.v4.widget.DrawerLayout>