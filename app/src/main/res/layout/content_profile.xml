<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:frisson="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/profile_header_banner"
            tools:context=".ProfilePage.ProfileActivity">

            <include layout="@layout/include_toolbar"
                android:background="@color/transparent"
                />

            <developer.shivam.library.DiagonalView
                android:id="@+id/wave_head"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/profile22"
                android:scaleType="centerCrop"
                diagonal:diagonalColor="#FFFFFF"
                diagonal:backgroundColor="#00F44336"
                diagonal:diagonalGravity="right"
                diagonal:angle="15"/>


          <!--  <com.intrusoft.library.FrissonView
                android:id="@+id/wave_head"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                frisson:src="@drawable/profile"
                android:scaleType="centerCrop"
                frisson:tideCount="3"
                frisson:tintColor="@color/transparent"
                frisson:tideHeight="50dp"
                frisson:alphaValue="70"
                frisson:autoTint="true"/>   -->

            <View
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/ic_navigation" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/ic_edit" />

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="160dp"
                fresco:placeholderImage="@drawable/user" />

            <!--
             -->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aa000000"
                android:layout_alignTop="@id/profile_image"
                android:layout_alignBottom="@id/profile_image"
                android:layout_alignStart="@id/profile_image"
                android:layout_alignLeft="@id/profile_image"
                android:layout_alignEnd="@id/profile_image"
                android:layout_alignRight="@id/profile_image"
                android:id="@+id/activity_profile_avatarProgressFrame"
                android:clickable="true">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateOnly="true"/>
            </FrameLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profile_image"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@+id/profile_image"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Intruder Shanky"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:textSize="18sp"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="UI/UX Desig" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wave_head"
                android:padding="10dp"
                android:orientation="horizontal"
                android:id="@+id/activity_profile_textFields">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_post_layout"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/user_profile_textview"
                        android:singleLine="true"
                        android:text="Total Posts"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_posts_counter"
                        android:singleLine="true"
                        android:text="0"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa424242" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/follower_column"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/profile_followers"
                        android:layout_gravity="center"
                        android:text="Followers"/>
                    <TextView
                        android:id="@+id/action_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="0"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa424242" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/following_layout"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/profile_following"
                        android:layout_gravity="center"
                        android:text="Following"/>
                    <TextView
                        android:id="@+id/action_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="0"
                        android:layout_gravity="center"/>

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/age"
                    android:drawableLeft="@drawable/ic_mail"
                    android:drawablePadding="24dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="Age"
                    android:textColor="#880E4F" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/age_value"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#880E4F" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender"
                    android:drawableLeft="@drawable/ic_mail"
                    android:drawablePadding="24dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="Gender"
                    android:textColor="#880E4F" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender_value"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#880E4F" />


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_main_nav_drawer" />

</android.support.v4.widget.DrawerLayout>