<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_Color"
    tools:context=".DiscoverPage.DiscoverPopularFragment">

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/discover_popular_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_discover_popular_recyclerview"
            class="android.supportv7.widget.RecyclerView"/>

        </com.baoyz.widget.PullRefreshLayout>



    <ProgressBar
        android:id="@+id/main_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <include layout="@layout/error_layout"/>

    <FrameLayout
        android:id="@+id/activity_discover_popular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#91D4Fa"
        android:clickable="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>


</FrameLayout>
